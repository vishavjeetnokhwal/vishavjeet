	<div class="ui large header">User Sign Up</div>
<hr>
	<form action="/register/user" method="post" class="ui form">


<div class="field">

     <label>Name</label>
     <input type="text" name="user[name]" required autofocus>
</div>




<div class="field">

   	 <label>Cty</label>
     <input type="text" name="user[city]" required>
</div>

  

<div class="field">
     <label>Date Of Birth</label>
     <input type="text" name="user[dateOfBirth]" required>
</div> 

<div class="field">
     <label>Phone</label>
     <input type="text" name="user[phone]" required>
</div>

<div class="field">
     <label>Image</label>
     <input type="text" name="user[image]" required>
</div>

<div class="field">

     <label>Username</label>
     <input type="text" name="user[username]" required>
</div>

